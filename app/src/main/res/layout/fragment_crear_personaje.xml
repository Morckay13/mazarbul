<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CreaciÃ³n de personaje"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombrePersonaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del personaje"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"/>

        <!-- Trasfondo -->
        <EditText
            android:id="@+id/etTrasfondoPersonaje"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="12dp"
            android:gravity="top"
            android:hint="Trasfondo del personaje"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <TextView
            android:id="@+id/tvResumenRazaAtributos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raza: (no seleccionada)\nSubraza: -\n\nAtributos: -"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- Raza -->
        <Button
            android:id="@+id/btnRaza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar raza"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvResumenClase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clase: (no seleccionada)\nSubclase: -\nHabilidades: -"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- Clase -->
        <Button
            android:id="@+id/btnClase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar clase"
            android:layout_marginBottom="12dp"/>

        <!-- Imagen / Mapa -->
        <ImageView
            android:id="@+id/imgMapa"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <!-- Registro -->
        <Button
            android:id="@+id/btnRegistrarPersonaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar personaje"
            android:layout_marginTop="12dp"/>


    </LinearLayout>
</ScrollView>
