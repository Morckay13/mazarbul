<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgSubrazaDetalle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/tvNombreSubrazaDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subraza"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvDescripcionSubraza"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Aquí irá la historia y descripción..."
        android:paddingTop="12dp"/>

    <Button
        android:id="@+id/btnContinuarAtributos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar"/>
</LinearLayout>
