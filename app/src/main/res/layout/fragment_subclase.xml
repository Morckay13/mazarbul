<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona una Subclase"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Botones de ejemplo (luego será RecyclerView) -->
    <Button
        android:id="@+id/btnSub1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campeón"/>

    <Button
        android:id="@+id/btnSub2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hechicero"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSub3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sacerdote"
        android:layout_marginTop="8dp"/>

</LinearLayout>
